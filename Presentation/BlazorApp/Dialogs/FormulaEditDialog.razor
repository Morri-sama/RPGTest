<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Expression"
                      Label="Формула"
                      Variant="Variant.Outlined"
                      Lines="8"
                      ReadOnly="true" />

        @foreach (var operation in _operationsList)
        {
            <MudButton OnClick="e => AddValue(operation)">@operation</MudButton>
        }

        <br />

        <MudButton OnClick="@(e => AddValue(_numericChipValue.ToString()))">
            <MudNumericField T="int"
                             @bind-Value="_numericChipValue" />
        </MudButton>

        <MudChipSet AllClosable="true"
                    OnClose="OnChipClose">
            @foreach (var value in _values)
            {
                <MudChip Text="@value"></MudChip>
            }
        </MudChipSet>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отмена</MudButton>
        <MudButton Color="Color.Success"
                   OnClick="Save">Сохранить</MudButton>
    </DialogActions>
</MudDialog>